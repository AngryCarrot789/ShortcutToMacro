<UserControl x:Class="ShortcutToMacro.Macros.MacroControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShortcutToMacro.Macros"
             mc:Ignorable="d" 
             Height="40" d:DesignWidth="300">
    <TextBlock Text="{Binding MacroName, UpdateSourceTrigger=PropertyChanged, FallbackValue=MacroName}" FontSize="20" VerticalAlignment="Center" FontFamily="Consolas"/>
</UserControl>
